extends index

block navbar
  #navbar.span12.navbar
    .navbar-inner
      .container
        ul.nav.pull-left
        
          if menuAccueil
            li.active 
              a(href='/') Accueil
          else
            li
              a(href='/') Accueil
              
          if menuContactezNous
            li.active
              a(href='/contactez-nous') Contactez-nous
          else
            li
              a(href='/contactez-nous') Contactez-nous
        
          if userType === 'prof'
            ul.nav.pull-right
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='#')
                  | Mr. Professeur
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='#') Profil
                  li
                    a(href='/logout') Déconnecter
          else 
            if userType === 'etudiant'
              ul.nav.pull-right
                li.dropdown
                  a.dropdown-toggle(data-toggle='dropdown', href='#')
                    | Mr. Etudiant
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='#') Profil
                    li
                      a(href='/logout') Déconnecter
          