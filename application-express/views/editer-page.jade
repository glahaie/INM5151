extends navbar-professeur
// IF-1.3-E :: Interface pour éditer une page

block jsextra
    script(src='/static/javascripts/editeurpresentation.js')
    script(src='/static/javascripts/edit-pres.js')
    
block contenu
  nav#presentations.span3
    include arborescence
  
  section#interface-primaire.span6
    ul.breadcrumb
      li
        a#presentationID(href='') #{presentationTitre}
        span.divider /
      li
        span Page 
          span#page-id 1
    
    ul.inline
      li
        form(action='/presentation')
          button.btn(type='submit') Mode Consulter
      li
        a(href="#") 
          button.btn#start_full Démarrer la présentation 
      li
        form(action='/partager-presentation')
          button.btn(type='submit') Partager
    
    div#remplir
      form(action='')
        ul.nav.inline
          li: a(href='#'): i.icon-bold
          li: a(href='#'): i.icon-italic
          li: a(href='#'): i.icon-font
          li: a(href='#'): i.icon-align-left
          li: a(href='#'): i.icon-align-center
          li: a(href='#'): i.icon-align-justify
          li: a(href='#'): i.icon-align-right
          li: p texte
        textarea#editeur-page(style='height: 200px; width:100%')
        p.muted Indice: Drag et drop pour insérer des images.
        .form-actions
          button#bouton-sauvegarder.btn.btn-primary(type='submit') Sauvegarder
          button.btn(type='button') Annuler
      #source-presentation(style="display:none") !{presentationObj}
    div#saveEditor 
    
  #acetates.span3(style='height: 600px; overflow-y: scroll;')
    include acetates


